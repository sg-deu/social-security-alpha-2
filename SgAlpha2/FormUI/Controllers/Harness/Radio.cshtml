@inherits WebViewPage<HarnessModel>
@using FormUI.Controllers.Harness
<div class="grid"><!--
    --><div class="grid__item large--eight-twelfths">

        <h2>Radio examples</h2>

        <form>

            <style>

                .radio-inline {
                    overflow: auto;
                    padding-top: 4px;
                    padding-left: 5px;
                }

                .radio-inline-item {
                    float: left;
                    margin-right: 30px;
                    position: relative;
                    padding: 8px 10px 9px 50px;
                }

                .radio-inline-item input {
                    position: absolute;
                    left: 0;
                    top: 2px;
                    width: 38px;
                    height: 38px;
                    outline: none !important;
                }

                .radio-inline-item input:checked::before {
                  content: "";
                  border: 2px solid;
                  background: transparent;
                  width: 37px;
                  height: 37px;
                  position: absolute;
                  top: 0px;
                  left: 0px;
                  border-radius: 50%;
                }

                .radio-inline-item input:focus::before {
                  box-shadow: 0 0 0 5px #ffbf47;
                }

                .radio-inline-item span {
                }

            </style>

            @(Html.LabelledOptionalRadio("Radio1", m => m.Radio1)
                .Hint("An example of an inline radio (exactly two options)"))

            @(Html.LabelledOptionalRadio("Radio1", m => m.Radio1, RValues1Util.Descriptions)
                .Hint("Supplying specific descriptions"))


        </form>

    </div><!--
--></div>
