@inherits WebViewPage<EvidenceModel>
@{
    ViewBag.Title = "Change of Circumstances - Documents to validate change of circumstances";
}

<div class="grid"><!--
    --><div class="grid__item large--eight-twelfths">

        @Html.BackLink(Model.PreviousAction)

        <h1>Documents to validate change of circumstances</h1>

        @using (var form = Html.FormFor(Model.Evidence))
        {

            @form.Html.ValidationSummary()

            <h2>Your need to upload documents to support your change of circumstances</h2>

            <h3>Supporting documents (relevant material) should meet the following standards:</h3>

            <ul>
                <li>the maximum allowable size per document may not be more than 2MB.</li>
            </ul>

            <br/>

            if (Model.UploadedFiles.Count == 0)
            {
                <h3>No files uploaded</h3>
            }
            else
            {
                <p>Currently uploaded files:</p>
                <ul id="uploadedFiles">
                    @foreach (var file in Model.UploadedFiles)
                    {
                        <li>@file</li>
                    }
                </ul>
            }

            <br/>
            <p>Upload a file</p>

            <input type="file" />

            <br/><br/>

            @form.Html.FormButton(CocButtons.UploadFile, "Upload selected file")

            <br/>

            <p>
                If you do not have the facilities to upload documents please post them to the address below
            </p>

            @form.Html.Partial(SharedViews.SsaContactDetails, true)

            @form.Html.LabelledConfirmCheckBox(m => m.SendingByPost).Control(c => c.Emphasise())


            @form.Html.ButtonSubmitNext(Model.IsFinalPage)

        }

        @Html.BackLink(Model.PreviousAction)

    </div><!--
--></div>