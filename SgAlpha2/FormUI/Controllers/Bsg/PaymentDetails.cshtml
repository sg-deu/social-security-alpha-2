@inherits WebViewPage<PaymentDetailsModel>
@{
    ViewBag.Title = "Best Start Grant - Payment Details";
}

<div class="grid"><!--
    --><div class="grid__item large--eight-twelfths">

        @Html.BackLink(Model.PreviousAction)

        <h1>Payment details</h1>

        @using (var form = Html.FormFor(Model.PaymentDetails))
        {

            @form.Html.ValidationSummary()

            <h2>How we pay you</h2>

            @form.Html.LabelledRadioYesNo(m => m.HasBankAccount).Mandatory()

            using (form.Html.ShowWhenYes(m => m.HasBankAccount, t => t.Id("ba-details")))
            {
                @form.Html.LabelledInputText(m => m.NameOfAccountHolder).Mandatory()

                @form.Html.LabelledInputText(m => m.NameOfBank).Mandatory()

                @form.Html.LabelledInputText(m => m.SortCode).Mandatory()

                @form.Html.LabelledInputText(m => m.AccountNumber).Mandatory()

                @form.Html.LabelledInputText(m => m.RollNumber)
            }


            @form.Html.ButtonSubmitNext(Model.IsFinalPage)

        }

        @Html.BackLink(Model.PreviousAction)

    </div><!--
--></div>