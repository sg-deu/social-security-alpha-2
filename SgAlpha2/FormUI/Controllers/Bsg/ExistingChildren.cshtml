@inherits WebViewPage<ExistingChildren>
@{
    ViewBag.Title = "Best Start Grant - Existing Children";
}

<div class="grid"><!--
    --><div class="grid__item large--eight-twelfths">

        <h1>If the baby has already been born...</h1>

        <br />

        <form method="post">

            @Html.ValidationSummary()

            @for (var i = 0; i < Model.Children.Count; i++) {
                <h3>Child @(i + 1)</h3>

                @Html.LabelledInputText(m => m.Children[i].FirstName)
                @Html.LabelledInputText(m => m.Children[i].Surname)
                @Html.LabelledInputDate(m => m.Children[i].DateOfBirth)
                @Html.LabelledInputText(m => m.Children[i].RelationshipToChild)
                @Html.LabelledRadioYesNo(m => m.Children[i].ChildBenefit)
                @Html.LabelledRadioYesNo(m => m.Children[i].FormalKinshipCare)
            }

            <div class="form-group">
                <button name="Add" class="button button--primary">Add Child</button>
            </div>

            @Html.ButtonSubmitNext()

        </form>

    </div><!--
--></div>
