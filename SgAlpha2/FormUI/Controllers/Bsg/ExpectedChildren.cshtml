@inherits WebViewPage<ExpectedChildren>
@{
    ViewBag.Title = "Best Start Grant - Expected Children";
}

<div class="grid"><!--
    --><div class="grid__item large--eight-twelfths">

        <h1>If a baby is expected ...</h1>

        <br />

        <form method="post">

            @Html.ValidationSummary()


            @Html.LabelledInputDate(m => m.ExpectancyDate)

            @(Html.LabelledInputInt(m => m.ExpectedBabyCount)
                .Control(c => c.MaxLength(2))
                .Width(ControlWidth.Small))

            @Html.ButtonSubmit()

        </form>

    </div><!--
--></div>
